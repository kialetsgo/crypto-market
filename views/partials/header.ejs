                        <li class="navbar-text space-right"> <a href="/user/login" class="login">Log
                                In</a></li>
                        <li><a class="btn btn-light action-button" role="button" href="/user/register">Sign Up</a></li>
                        <% } else { %>
                        <li class="navbar-text space-right"> <a href="/user/dashboard" class="account">Account</a></li>
                        <li class="navbar-text">
                            <form method="POST" action="/user/logout">
                                <button type="submit" role="button" class=" btn btn-light action-button
                                    button-align-right">Logout</button>
                            </form>
                        </li>


                        <% } %>
                    </div>
                </div>
            </nav>
        </div>
    </div>

